class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        int n = nums.size();

        unordered_map<int, int> um;
        for (int i = 0; i < n; i++) {
            int needed = target - nums[i];

            auto it = um.find(needed);
            if (it != um.end()) {
                return {it->second, i};
            }

            um[nums[i]] = i;
        }

        return {};
    }
};
