class Solution {
public:
    int findMaxLength(vector<int>& nums) {
        int n = nums.size();

        int sum = 0;
        int maxLen = 0;

        unordered_map<int, int> um;
        um[0] = -1;

        for (int i = 0; i < n; i++) {
            sum += (nums[i] == 0 ? -1 : 1);

            if (um.find(sum) != um.end()) {
                maxLen = max(maxLen, i - um[sum]);
            } else {
                um[sum] = i;
            }
        }

        return maxLen;
    }
};
